---
// Esto permite que el layout reciba contenido y variables desde las páginas que lo usen
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <title>{title ? title : "Mi Proyecto en Astro"}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <!-- Importa tu CSS de Tailwind -->
  </head>
  <body class="font-sans text-gray-900 bg-gray-100">
    <!-- Cabecera común para todas las páginas -->
    <header class="p-4 bg-orange-300 text-white w-full flex">
      <h1 class="text-2xl font-bold">FernandoDevs</h1>
      <nav class="mt-2 flex ml-3">
        <a href="/" class="mr-4 hover:underline bg-slate-300">Inicio</a>
        <a href="/about" class="mr-4 hover:underline">Acerca de</a>
        <a href="/contact" class="hover:underline">Contacto</a>
      </nav>
    </header>

    <!-- Contenido principal, que se insertará desde las páginas -->
    <main class="p-6">
      <slot />
      <!-- Este es el espacio donde se inserta el contenido de cada página -->
    </main>

    
  </body>
</html>
